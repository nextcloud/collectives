    "@nextcloud/vite-config": "^2.5.2",
    "@types/node": "^25.3.0",
    "@vue/tsconfig": "^0.8.1",
    "cypress": "13.6.4",
    "cypress-split": "^1.24.28",
    "eslint": "^9.39.3",
    "eslint-plugin-cypress": "^6.1.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
