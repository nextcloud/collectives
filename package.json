    "sortablejs": "^1.15.7",
    "v-click-outside": "^3.2.0",
    "vue": "^3.5.28",
    "vue-draggable-plus": "^0.6.1",
    "vue-material-design-icons": "^5.3.1",
    "vue-router": "^5.0.2",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "workbox-core": "^7.4.0",
