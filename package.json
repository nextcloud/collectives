    "serve": "vite --mode development serve",
    "start:nextcloud": "node playwright/start-nextcloud-server.js",
    "stylelint": "stylelint css/collectives.css css/*.scss src/**/*.scss src/*.vue src/**/*.vue",
    "stylelint:fix": "stylelint css/collectives.css css/*.scss src/**/*.scss src/**/*.vue --fix",
    "test": "vitest run",
    "watch": "vite --mode development build --watch"
  },
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "dependencies": {
    "@nextcloud/auth": "^2.5.3",
    "@nextcloud/axios": "^2.5.2",
