    "@nextcloud/event-bus": "^3.0.2",
    "@nextcloud/files": "^2.1.0",
    "@nextcloud/moment": "^1.2.1",
    "@nextcloud/notify_push": "^1.1.2",
    "@nextcloud/paths": "^2.1.0",
    "@nextcloud/router": "^2.0.0",
    "@nextcloud/text": "^25.0.0-alpha.12",
    "@nextcloud/vue": "^7.0.0",
    "debounce": "^1.2.1",
    "escape-html": "^1.0.3",
    "sortablejs": "^1.15.0",
    "v-click-outside": "^3.2.0",
    "vue": "^2.7.13",
